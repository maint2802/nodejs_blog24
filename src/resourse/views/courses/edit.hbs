<h2>Create a new Course</h2>

<form class="w-50" method="POST" action="/courses/{{course._id}}?_method=PUT">
  <div class="mb-3">
    <label for="name" class="form-label">Name</label>
    <input class="form-control" id="name" name="name" value={{course.name}}>
  </div>
  <div class="mb-3">
    <label for="description" class="form-label">Description</label>
    <textarea class="form-control" id="description" name="description">{{course.description}}</textarea>
  </div>
  <div class="mb-3">
    <label for="videoId" class="form-label">videoId</label>
    <input class="form-control" id="videoId" name="videoId" value={{course.videoId}}>
  </div>
    <div class="mb-3">
    <label for="level" class="form-label">Level</label>
    <input class="form-control" id="level" name="level" value={{course.level}}>
  </div>
  <button type="submit" class="btn btn-primary">Update</button>
</form>