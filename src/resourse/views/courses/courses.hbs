<h1>Courses list</h1>
<div class="container ">
 <div class="row">
       {{#each courses}}
         <div class="col-6">
            <a href="/courses/{{this.slug}}" class="text-decoration-none	">
                <div class="card" >
                    <img src={{this.image}} class="card-img-top image" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">{{this.name}}</h5>
                        <p class="card-text">{{this.description}}</p>
                        <a href="#" class="btn btn-primary">Go to Course</a>
                    </div>
                </div>
            </a>
       </div>
      {{/each}}
 </div>
 <a href="/courses/create"><button>Create a new Course</button></a>
</div>